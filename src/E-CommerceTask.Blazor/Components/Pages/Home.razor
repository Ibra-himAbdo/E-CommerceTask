@page "/"
@inject ICartService CartService
<PageTitle>Home</PageTitle>

<MudGrid>
    @foreach (var product in _products)
    {
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Class="rounded">
                <MudCardMedia Image="@ImageUrl(product.ImageUrl)" Height="250"/>
                <MudCardContent>
                    <MudText Typo="Typo.h6">@product.Name</MudText>
                    <MudText Typo="Typo.body2">@product.Description</MudText>
                </MudCardContent>
                <MudDivider/>
                <MudCardActions>
                    <MudText Typo="Typo.h6" Class="mx-1">$@product.Price</MudText>
                    <MudSpacer/>
                    <MudIconButton Icon="@Icons.Material.Filled.AddShoppingCart"

                                   Color="Color.Default"
                                   OnClick="() => AddItem(product,1)"/>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
